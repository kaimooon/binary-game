<Window x:Class="binary_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:binary_game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/1600w-D1HaFKd6PGI.jpg"/>
        </Grid.Background>
        <Button x:Name="start_btn" Content="Start" Click="start_btn_Click" HorizontalAlignment="Center" Margin="0,189,0,0" VerticalAlignment="Top" Height="46" Width="96" Background="#FFF5D4F5"/>
        <Label Content="Welcome to 8-bit binary Game!" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" FontSize="24" Background="#FFF5B8B8"/>
        <Button x:Name="ldb_btn" Content="Leaderboard" Click="ldb_btn_Click" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Height="46" Width="96" Background="#FFF5D4F5"/>
        <Button x:Name="exit_btn" Content="Exit" Click="exit_btn_Click" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Height="46" Width="96" Background="#FFD0B4D0"/>

    </Grid>
</Window>
